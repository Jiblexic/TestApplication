<head>
    <meta charset="utf-8" />

    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">
    <title>Test Application - Daniel Regan</title>

    @Styles.Render("~/Content/css", "~/Content/less")

    <!-- All JavaScript at the bottom, except this Modernizr build.
       Modernizr enables HTML5 elements & feature detects for optimal performance.
       Create your own custom Modernizr build: www.modernizr.com/download/ -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="busyindicator"></div>
    <header>
        <h1>Test Application</h1>
        <!--
        <a href="http://jpapa.me/spaps"><small style="color: #f58a00; font-weight: bold">Click here to learn how to build the Code Camper SPA</small></a>
        -->
        <nav id="shellTop-view" class="main-nav">
            <div class="accent-top" data-bind="text: currentUser().fullName"></div>
            <div class="accent-left"></div>
            <ul data-bind="with: menuHashes">
                <li class="route-top"><a data-bind="attr: {href: Pupils}">Pupils</a></li>
                <li class="route-top"><a data-bind="attr: {href: Teachers}">Teachers</a></li>
                <li class="route-top"><a data-bind="attr: {href: Subjects}">Subjects</a></li>
                <li class="route-top"><a data-bind="attr: {href: Rooms}">Rooms</a></li>
                <li class="route-top"><a data-bind="attr: {href: Lessons}">Lessons</a></li>
            </ul>
        </nav>
    </header>

    <section class="main">

    </section>

    <!--
    When bundling, load in this sequence:
    1) shivs and jQuery
    2) 3rd party libraries
    3) require.js
    4) your app libraries
    5) main.js
    -->

    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/jsextlibs",
        "~/Scripts/lib/require.js",
        "~/bundles/jsapplibs",
        "~/Scripts/main.js"
    )

</body>
</html>